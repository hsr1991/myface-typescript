<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Posts</h1>
<div class="allPosts">
    <% results.forEach(function(post) {%>
        
        <div class="eachPost">
            <p><%= post.message %></p>
            <label class="postImage"></label>
            <img src="<%=post.imageUrl%>" class= "postImage"/>
            <p>Posted on <%= post.createdAt %> by <%= post.postedBy.username %></p>
            <p>Likes: <%= post.likedBy.length %> Dislikes: <%= post.dislikedBy.length %></p>
            <form method="post" action="/posts/<%=post.id%>/like/">
            <button type="submit"class="likeButton">Like!</button></form>
            <form method="post" action="/posts/<%=post.id%>/dislike/">
            <button type="submit"class="dislikeButton">Dislike!</button></form>
        </div>
        
    <% }); %>
</div>

<%if (next) { %>
    <a href="<%= next %>">Next</a>
<% } %>
<%if (previous) { %>
    <a href="<%= previous %>">Previous</a>
<% } %>
</body>
<%- include('_footer') -%>
</html>